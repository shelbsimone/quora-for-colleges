<%= simple_form_for([@question], html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

  
    <%= f.input :content, required: false, autofocus: true, label: false, placeholder: "Your Question", input_html: {class: "form-control"} %>
  
  
  
    <%= f.input :description, required: false, label: false, placeholder: "Description", input_html: {class: "form-control"} %>
  

 
    <%= f.button :submit, "Ask", class: "btn btn-primary btn-block" %>
<% end %>

